{
    "name": "fiskalizacija2",
    "version": "0.2.0-rc.1",
    "description": "Croatian e-invoicing and fiscalization library",
    "types": "dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": "./dist/index.js"
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "clean": "rm -rf dist",
        "lint": "eslint src tests",
        "lint:fix": "eslint --fix src tests",
        "format": "prettier --write .",
        "test": "vitest --exclude tests/external",
        "test:watch": "vitest --watch --exclude tests/external",
        "test:coverage": "vitest --coverage --exclude tests/external",
        "test:external": "vitest run tests/external"
    },
    "dependencies": {
        "libxml2-wasm": "^0.6.0",
        "xml-crypto": "git+https://github.com/shunkica/xml-crypto.git#aa9b086"
    },
    "devDependencies": {
        "@microsoft/api-extractor": "^7.52.10",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^8.39.1",
        "@typescript-eslint/parser": "^8.39.1",
        "@vitest/coverage-v8": "^2.0.0",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import-x": "^4.16.1",
        "prettier": "^3.6.2",
        "tsup": "^8.5.0",
        "typescript": "^5.0.0",
        "vitest": "^2.0.0"
    }
}
